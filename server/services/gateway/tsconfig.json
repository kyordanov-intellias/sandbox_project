{
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "./dist",
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*",
        "config/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}