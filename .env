# Global Settings
NODE_ENV=development

# Gateway Service
GATEWAY_PORT=4000
GATEWAY_PORT_FRONTEND=5173

# Auth Service
AUTH_SERVICE_PORT=4001
AUTH_SERVICE_DB_HOST=postgres
AUTH_SERVICE_DB_PORT=5432
AUTH_SERVICE_DB_USER=postgres
AUTH_SERVICE_DB_PASSWORD=postgres
AUTH_SERVICE_DB_NAME=auth_db
AUTH_SERVICE_JWT_SECRET=your-auth-secret-key

# JWT Configuration
JWT_EXPIRATION=24h

# Shared Database Configuration (if you decide to use a single database)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# API Configurations
API_PREFIX=/api/v1
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Security
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100 